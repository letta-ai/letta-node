{
    "compilerOptions": {
        "extendedDiagnostics": true,
        "strict": true,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "environments": ["src/environments"],
            "api": ["src/api"],
            "api/*": ["src/api/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "types": ["jest", "node"]
    },
    "include": ["tests/**/*", "src/**/*"],
    "exclude": ["node_modules"]
}
